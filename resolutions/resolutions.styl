/* CSS declarations go here */
html {
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

#login-buttons{
  background: #DE4F4F;
  color: #FFF;
  font-size: 14px;
  padding: 10px 15px;
  border: none;
  border-radius: 4px;
  text-transform: uppercase;
  margin: 20px;
}


body {
  font-family: sans-serif;
  font-size: 16px;
  background: #333;
}

.container {
  max-width: 900px;
  margin: 0 auto;
  min-height: 100%;
  background: white;
}

header {
  padding: 20px 15px 15px 15px;
  position: relative;
}

h1 {
  font-size: 30px;
  color: #333;
  margin: 0;
  margin-bottom: 10px;
  display: inline-block;
  margin-right: 1em;
  text-transform: uppercase;
}

.new-resolution input[type="text"] {
  padding: 10px 0;
  background: transparent;
  border: none;
  width: 50%;
  padding-right: 80px;
  font-size: 1em;
  border-bottom: 1px solid rgba(0,0,0,0.3);
}

.new-resolution input:focus{
  outline: 0;
}

.new-resolution input[type="submit"] {
	background: #333;
	font-size: 14px;
	color: #fff;
	text-transform: uppercase;
	border-radius : 3px;
	border: none;
	width: 100px;
	height: 35px;
}

ul {
  margin: 0;
  padding: 0;
  background: white;
}

.delete {
  float: right;
  font-weight: bold;
  background: #DE4F4F;
  color: #FFF;
  font-size: 14px;
  padding: 5px 10px;
  border: none;
  border-radius: 4px;
  text-transform: uppercase;
}
.toggle-private {
  font-weight: bold;
  background: #DE4F4F;
  color: #FFF;
  font-size: 14px;
  width: 80px;
  border: none;
  border-radius: 4px;
  text-transform: uppercase;
}

li {
  position: relative;
  list-style: none;
  padding: 20px 15px;
  border-bottom: #eee solid 1px;
}

li .text {
  margin-left: 10px;
}

li.checked {
  color: #888;
}

li.checked .text {
  text-decoration: line-through;
}